---
import SectionWrapper from "../../ui/section/SectionWrapper.astro";
import SectionHeading from "../../ui/section/SectionHeading.astro";
import userData from "../../../data/user.json";
import experienceData from "../../../data/experience.json";

const { description, traits } = userData;
---

<SectionWrapper id="about" className="bg-gray-50 dark:bg-gray-800/50 py-20">
    <div class="flex flex-col md:flex-row gap-16">
        <div class="flex-1 animate-on-scroll opacity-0 translate-y-8">
            <SectionHeading title="About Me" />
            <p
                class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-6 font-light"
            >
                {description}
            </p>
            <div class="flex flex-wrap gap-3 mb-8">
                {
                    traits.map((trait) => (
                        <span class="px-4 py-2 bg-white dark:bg-gray-800 border border-primary/10 text-primary rounded-full text-sm font-medium shadow-sm">
                            {trait}
                        </span>
                    ))
                }
            </div>
        </div>

        <div class="flex-1 animate-on-scroll opacity-0 translate-y-8">
            <SectionHeading title="Experience" />
            <div class="space-y-12">
                {
                    experienceData.map((item) => (
                        <div class="relative pl-8 border-l-2 border-primary/20">
                            <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-background border-4 border-primary" />
                            <h3 class="font-bold text-xl mb-1 text-gray-900 dark:text-white">
                                {item.role}
                            </h3>
                            <div class="mb-3 flex flex-wrap gap-x-4 text-sm text-gray-600 dark:text-gray-400 font-medium">
                                <span class="text-primary">{item.company}</span>
                                <span>â€¢</span>
                                <span>{item.period}</span>
                            </div>
                            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                                {item.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</SectionWrapper>
