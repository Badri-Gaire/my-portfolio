---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
}

const { title, subtitle, className = "" } = Astro.props;
---

<h2
  class={`text-2xl font-bold mb-6 relative inline-block text-gray-900 dark:text-white ${className}`}
>
  {title}
  <span class="absolute -bottom-2 left-0 w-1/3 h-1  bg-orange-500 dark:bg-primary rounded-full"
  ></span>
</h2>
{
  subtitle && (
    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl text-center md:text-left">
      {subtitle}
    </p>
  )
}
