---
interface Props {
  title: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<h2
  class={`text-2xl font-bold mb-6 relative inline-block text-gray-900 dark:text-white ${className}`}
>
  {title}
  <span class="absolute -bottom-2 left-0 w-1/3 h-1 bg-primary rounded-full"
  ></span>
</h2>
