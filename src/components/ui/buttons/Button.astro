---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline";
  className?: string;
  type?: "button" | "submit" | "reset";
}

const { href, variant = "primary", className = "", type = "button" } = Astro.props;

const baseStyles = "inline-flex items-center justify-center px-6 py-2 rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2";

const variants = {
  primary: "bg-primary text-white hover:bg-blue-600 focus:ring-blue-500",
  secondary: "bg-secondary text-white hover:bg-gray-600 focus:ring-gray-500",
  outline: "border border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 focus:ring-gray-500",
};

const styles = `${baseStyles} ${variants[variant]} ${className}`;
---

{
  href ? (
    <a href={href} class={styles}>
      <slot />
    </a>
  ) : (
    <button type={type} class={styles}>
      <slot />
    </button>
  )
}
