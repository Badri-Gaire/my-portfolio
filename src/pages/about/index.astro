---
import PageLayout from "../../components/layout/PageLayout.astro";
import SectionHeading from "../../components/ui/section/SectionHeading.astro";

const experience = [
  {
    role: "Senior Frontend Developer",
    company: "Tech Corp",
    period: "2022 - Present",
    description: "Leading the frontend team and building scalable web applications."
  },
  {
    role: "Web Developer",
    company: "StartUp Inc",
    period: "2020 - 2022",
    description: "Developed and maintained multiple client websites using React and Gatsby."
  }
];
---

<PageLayout title="About Me">
  <div class="grid md:grid-cols-2 gap-12">
    <div>
      <SectionHeading title="Who I am" />
      <p class="text-secondary mb-4 leading-relaxed">
        I am a passionate developer with a strong focus on user experience and performance. I love solving complex problems and learning new technologies.
      </p>
      <p class="text-secondary mb-4 leading-relaxed">
        When I'm not coding, you can find me reading, hiking, or playing video games.
      </p>
    </div>
    
    <div>
      <SectionHeading title="Experience" />
      <div class="space-y-8">
        {experience.map((item) => (
          <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
            <div class="absolute -left-1.5 top-1.5 w-3 h-3 rounded-full bg-primary ring-4 ring-white dark:ring-gray-900"></div>
            <h3 class="font-bold text-lg">{item.role}</h3>
            <div class="mb-2 flex justify-between items-center">
               <span class="font-medium">{item.company}</span>
               <span class="text-sm text-secondary">{item.period}</span>
            </div>
            <p class="text-secondary text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</PageLayout>
